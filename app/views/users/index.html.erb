<h1>List of users</h1>

<table border="1">
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
  </tr>

  <% @user.each do |user| %>
    <tr>
      <td>
      <%= user.username %>
      </td>  
    

      <td>
      <% if user.private == true
        p=1
        else
        p=0
        end
       %>
      
      <%= if p=1
        "Yes"
        else
        "No"
        end
       %>
      </td>

      <td>
      <a href="/users/<%= user.username %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>