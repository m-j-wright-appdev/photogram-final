<h1><%= @user.username %></h1>

<dl>
  <dt>Private</dt>
  <dd><%= @user.private %></dd>

  <dt>Followers</dt>
  <dd><%= @user.followers.count %></dd>

  <dt>Following</dt>
  <dd><%= @user.leaders.count %></dd>
</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @user.username%>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @user.username%>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @user.username%>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @user.username%>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Discover (<%= @user.liked_photos.count %>)</h2>

<table border="1">
  <tbody><tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>

  <% Photo.all.each do |photo| %>
    <tr>
      <td>
      <img src="<%= photo.image %>">
      </td>  
    
      <td>
      <% a = photo.owner_id %>
      <%= User.where({:id => a }).at(0).username %>
      </td>

      <td>
      <%= photo.caption %>
      </td>

      <td>
      <%= photo.created_at %>
      </td>

      <td>
      <%= photo.likes_count %>
      </td>

      <td>
      <a href="/photos/<%= photo.id %>">Show details</a>
      </td>
    </tr>
  <%end%>
</tbody></table>
